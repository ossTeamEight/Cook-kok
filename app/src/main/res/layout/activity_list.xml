<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listActivity"
    tools:showIn="@layout/activity_list">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/음식추천"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <ImageButton
        android:id="@+id/korea"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/한식"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/korea_picture" />
    <TextView
        android:id="@+id/korea_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/한식"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/korea"
        app:layout_constraintVertical_bias="0.025" />

    <ImageButton
        android:id="@+id/china"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/중식"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/korea"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/china_picture" />
    <TextView
        android:id="@+id/china_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/중식"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/china"
        app:layout_constraintVertical_bias="0.025" />

    <ImageButton
        android:id="@+id/japan"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/일식"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/korea"
        app:srcCompat="@drawable/japan_picture" />

    <TextView
        android:id="@+id/japan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/일식"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.249"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/japan"
        app:layout_constraintVertical_bias="0.038" />

    <ImageButton
        android:id="@+id/western"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/양식"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/japan"
        app:layout_constraintTop_toBottomOf="@+id/china"
        app:srcCompat="@drawable/western_picture" />

    <TextView
        android:id="@+id/western_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/양식"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/western"
        app:layout_constraintVertical_bias="0.034" />

    <ImageButton
        android:id="@+id/others"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/기타"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/japan"
        app:srcCompat="@drawable/others_picture" />

    <TextView
        android:id="@+id/others_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/기타"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/others"
        app:layout_constraintVertical_bias="0.153" />

</androidx.constraintlayout.widget.ConstraintLayout>