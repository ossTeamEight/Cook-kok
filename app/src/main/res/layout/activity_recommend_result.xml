<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendResultActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:background="@drawable/back"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genie">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_roulette"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_background"
                android:text="룰렛 돌려줘"
                android:fontFamily="@font/md"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_recommend"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_background"
                android:text="다시 할래"
                android:fontFamily="@font/md"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_show"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_backgroundlight"
            android:text="음식 리스트 가기"
            android:fontFamily="@font/md"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/genie"
        android:layout_width="370dp"
        android:layout_height="328dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/genie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_foodlist" />

    <TextView
        android:id="@+id/text_foodlist"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/md"
        android:text="음식목록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wordbox" />


</androidx.constraintlayout.widget.ConstraintLayout>